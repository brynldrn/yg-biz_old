{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'col-md-4',
    'col-sm-4',
    'col-xs-12',
    'price',
    'text-center',
    'wow',
    'fadeInLeft'
  ]
%}

{% block paragraph %}
	<div {{ attributes }} {{ attributes.addClass(classes) }}>
		<h4>{{ content.field_pricing_list_name }}</h4>
		<p>$<span>{{ content.field_pricing_list_value[0]['#markup'] }}</span>
		</p>
	</span>
</p>
<div class="features">
	<h6>Features</h6>
	{% for feature in features %}
		<p>{{ feature }}</p>
	{% endfor %}
</div>

<a href="{{ content.field_pricing_list_url.0['#url'] }}" class="btn btn-infos">{{ content.field_pricing_list_url.0['#title'] }}</a></div>{% endblock paragraph %}
